<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="513.0" styleClass="pane" stylesheets="@../css/scoreboard.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.tictactoe.gui.controller.ScoreboardController">
   <children>
      <VBox prefHeight="400.0" prefWidth="514.0" style="-fx-background-color: #000000;">
         <children>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="514.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="264.0" style="-fx-text-fill: #ffffff;" text="RESULT">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="514.0">
               <children>
                  <Label text="Round: " textFill="WHITE">
                     <font>
                        <Font name="Calibri Light" size="25.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblRoundNumber" text="0" textFill="WHITE">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="514.0">
               <children>
                  <Label fx:id="lblResult" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="111.0" prefWidth="514.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0">
                     <children>
                        <Label fx:id="lblPlayerOneScore" alignment="CENTER" prefHeight="46.0" text="0" textFill="WHITE">
                           <font>
                              <Font size="40.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblPlayerOneName" alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" text="player 1" textFill="WHITE">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Label alignment="CENTER" prefHeight="46.0" prefWidth="14.0" text=":" textFill="WHITE">
                     <font>
                        <Font size="48.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" prefHeight="154.0" prefWidth="250.0">
                     <children>
                        <Label fx:id="lblPlayerTwoScore" alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" text="0" textFill="WHITE">
                           <font>
                              <Font size="40.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblPlayerTwoName" contentDisplay="RIGHT" prefHeight="46.0" text="player 2" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="90.0" prefWidth="514.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="newGame" mnemonicParsing="false" onAction="#btnContinuePlayingClicked" prefHeight="27.0" prefWidth="141.0" text="Continue">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#btnNewGameClicked" text="New game" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
