<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="513.0" styleClass="pane" stylesheets="@../css/Scoreboard.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.tictactoe.gui.controller.ScoreboardController">
   <children>
      <VBox prefHeight="400.0" prefWidth="514.0">
         <children>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="514.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="264.0" text="RESULT">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="514.0">
               <children>
                  <Label text="Round: ">
                     <font>
                        <Font name="Calibri Light" size="25.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblRoundNumber" text="0">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="514.0">
               <children>
                  <Label fx:id="lblResult">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="156.0" prefWidth="514.0">
               <children>
                  <Label fx:id="lblPlayerOneName" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="46.0" prefWidth="190.0" text="player 1">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lblPlayerTwoScore" alignment="CENTER" prefHeight="46.0" prefWidth="39.0" text="0">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" prefHeight="46.0" prefWidth="20.0" text=":">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblPlayerOneScore" alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" prefWidth="38.0" text="0">
                     <font>
                        <Font size="40.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblPlayerTwoName" contentDisplay="RIGHT" prefHeight="46.0" prefWidth="196.0" text="player 2" textAlignment="CENTER">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="57.0" prefWidth="514.0">
               <children>
                  <Button fx:id="newGame" mnemonicParsing="false" onAction="#btnNewGameClicked" text="New Game" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
